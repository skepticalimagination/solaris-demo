<?xml version='1.0' encoding='utf-8'?>
<widget id="com.skepticalimagination.solarisDemo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Solaris.js Demo</name>
    <description>
        A demonstration of the open-source component Solaris.js in action
    </description>
    <author email="wintermutt@skepticalimagination.com" href="http://skepticalimagination.com">
        Skeptical Imagination
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="BackgroundColor" value="0xff000000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <config-file parent="CFBundleDisplayName" target="*-Info.plist">
            <string>Solaris.js</string>
        </config-file>
        <config-file parent="CFBundleShortVersionString" target="*-Info.plist">
            <string>0.1.0</string>
        </config-file>
        <config-file parent="CFBundleVersion" target="*-Info.plist">
            <string>1</string>
        </config-file>
        <config-file parent="UIStatusBarHidden" target="*-Info.plist">
            <true />
        </config-file>
        <config-file parent="UIViewControllerBasedStatusBarAppearance" target="*-Info.plist">
            <false />
        </config-file>
    </platform>
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-custom-config" spec="^4.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
