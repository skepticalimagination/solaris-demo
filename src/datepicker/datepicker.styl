#datepicker
  display none
  position fixed
  bottom 10px
  right 10px
  border 1px solid #444
  color #fff
  background #222
  border-radius 5px
  font-size 140%
  padding 5px
  padding-left 10px
  
  input
    background transparent
    color #fff
    font-size 16px
